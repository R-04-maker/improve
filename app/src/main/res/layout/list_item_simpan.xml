<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#C1C1C1"
        app:cardCornerRadius="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/list_book"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_dummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="6dp"
                        app:cardMaxElevation="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/dummy"
                            android:layout_width="77dp"
                            android:layout_height="112dp"
                            android:layout_centerHorizontal="false"
                            android:elevation="10dp"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="6dp"
                        app:cardMaxElevation="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/cover_book_list_view"
                            android:layout_width="75dp"
                            android:layout_height="110dp"
                            android:layout_centerHorizontal="false"
                            android:elevation="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/poster_dummy" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#727272"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_kategori1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:fontFamily="@font/poppins"
                                android:text="Internal"
                                android:textColor="#727272"
                                android:textSize="10dp" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#2977B7"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toEndOf="@+id/card_kategori"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:fontFamily="@font/poppins"
                            android:paddingVertical="1dp"
                            android:text="Kelompok"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori_event3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#F7893C"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toEndOf="@+id/card_kategori_event"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:fontFamily="@font/poppins"
                            android:paddingVertical="1dp"
                            android:text="UI / UX"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nama_lomba"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoSizeMaxTextSize="18dp"
                        android:autoSizeMinTextSize="14dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="2"
                        android:paddingStart="2dp"
                        android:text="Novastech Politeknik Astra 2023 "
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_kategori" />

                    <TextView
                        android:id="@+id/lokasi_lomba"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="10dp"
                        android:autoSizeMinTextSize="9dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:paddingStart="2dp"
                        android:text="Politeknik Astra"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nama_lomba" />

                    <ImageView
                        android:id="@+id/icon_schedule"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icons8_schedule_96"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                    <TextView
                        android:id="@+id/tgl_lomba"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:paddingStart="2dp"
                        android:text="10 Juli - 25 Agustus 2023"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/icon_schedule"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/onlineoffline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#2DC997"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tgl_lomba"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:fontFamily="@font/poppins"
                            android:text="Online"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <ImageView
                    android:id="@+id/ic_hapus_disimpan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/baseline_delete_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>