<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="333dp"
        android:layout_height="123dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#C1C1C1"
        app:cardCornerRadius="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/list_book"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/foto_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#727272"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_kategori1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:fontFamily="@font/poppins"
                                android:text="Internal"
                                android:textColor="#727272"
                                android:textSize="10dp" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#2977B7"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toEndOf="@+id/card_kategori"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:fontFamily="@font/poppins"
                            android:paddingVertical="1dp"
                            android:text="Kelompok"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_kategori_event3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#F7893C"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toEndOf="@+id/card_kategori_event"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:fontFamily="@font/poppins"
                            android:paddingVertical="1dp"
                            android:text="UI / UX"
                            android:textColor="#FFFFFF"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/nama_lomba"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoSizeMaxTextSize="18dp"
                        android:autoSizeMinTextSize="14dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="2"
                        android:paddingStart="2dp"
                        android:text="Robby Fahsya "
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_kategori" />

                    <TextView
                        android:id="@+id/lokasi_lomba"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:paddingStart="2dp"
                        android:text="Manajemen Informatika"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nama_lomba" />

                    <ImageView
                        android:id="@+id/icon_schedule"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_xp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                    <TextView
                        android:id="@+id/tgl_lomba"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_vertical"
                        android:paddingStart="2dp"
                        android:text="102091"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/icon_schedule"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                    <ImageView
                        android:id="@+id/icon_xp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_poin"
                        app:layout_constraintStart_toEndOf="@+id/tgl_lomba"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                    <TextView
                        android:id="@+id/point_xp"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_vertical"
                        android:paddingStart="2dp"
                        android:text="102091"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@+id/icon_xp"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi_lomba" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>