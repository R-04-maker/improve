<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginfragmentt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/img_7" />


    <ImageView
        android:id="@+id/loginbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/loginbgrecent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roketpaint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/improvetext"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/improvetext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundedImageView" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

        <TextView
            android:id="@+id/tingkatkan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="13dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Silahkan masuk dengan akun SIA anda"
            android:textAllCaps="false"
            android:textColor="#F6883C"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nama Akun"
            android:textColor="#445FD1"
            android:layout_marginTop="20dp"

            app:layout_constraintStart_toStartOf="@+id/loginnim"
            app:layout_constraintTop_toBottomOf="@+id/tingkatkan" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Kata Sandi"
            android:textColor="#445FD1"
            app:layout_constraintStart_toStartOf="@+id/loginpass"
            app:layout_constraintTop_toBottomOf="@+id/loginnim"

            />

        <!--    <TextView-->
        <!--        android:id="@+id/required2"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginTop="20dp"-->
        <!--        android:layout_marginStart="80dp"-->
        <!--        android:textSize="20dp"-->
        <!--        android:fontFamily="@font/poppins_semibold"-->
        <!--        android:text="*"-->
        <!--        android:textColor="#F44336"-->

        <!--        app:layout_constraintBottom_toTopOf="@+id/loginpass"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/loginnim"-->
        <!--        app:layout_constraintStart_toStartOf="@+id/textView8"/>-->
        <EditText
            android:id="@+id/loginnim"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_border2"
            android:ems="10"
            android:hint="masukkan nim anda"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


        <EditText
            android:id="@+id/loginpass"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_border2"
            android:ems="10"
            android:hint="masukkan kata sandi"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/buttonloginya"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_button"
        android:elevation="40dp"
        android:fontFamily="@font/poppins_extrabold"
        android:gravity="center"
        android:text="Masuk"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        app:circularflow_radiusInDP="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginbg">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
